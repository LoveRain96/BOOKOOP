<html>
    <head>
        <title>Add Book</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script>

        </script>
    </head>

    <body>
        <div class="page-header"><h1 class="text-center">Add New Book</h1></div>
            <form class="form-horizontal col-sm-8 col-sm-offset-2" action="/book" method="post" role="form">
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2"> Name:</label>
                    <div class="col-sm-10">
                        <input class="form-control" name="name" placeholder="Enter name of book">
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2">Author:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="author" placeholder="Enter author of book">
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2">Publisher:</label>
                    <div class="col-sm-10">
                        <select class="selectpicker">
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2">Price:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="price" placeholder="Enter price of book">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button class="btn btn-primary btn-block" type="submit">ADD</button>
                    </div>
                </div>
            </form>
    </body>
</html>